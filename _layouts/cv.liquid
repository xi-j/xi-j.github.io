---
layout: default
---
{% if page.cv_pdf %}
  {% if page.cv_pdf contains '://' %}
    {% assign pdf_url = page.cv_pdf %}
  {% else %}
    {% assign pdf_url = page.cv_pdf | prepend: 'assets/pdf/' | relative_url %}
  {% endif %}
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if pdf_url %}
        <a href="{{ pdf_url }}" target="_blank" rel="noopener noreferrer" class="float-right">
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    {% if pdf_url %}
      <div class="cv-container" style="height: 800px; width: 100%;">
        <iframe 
          src="{{ pdf_url }}" 
          width="100%" 
          height="100%" 
          style="border: none;"
        >
          <p>
            Your browser does not support PDF embedding. 
            <a href="{{ pdf_url }}">Click here to view the PDF.</a>
          </p>
        </iframe>
      </div>
    {% else %}
      <p>Please define <code>cv_pdf</code> in the front matter of this page.</p>
    {% endif %}
  </article>
</div>